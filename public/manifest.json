{
  "manifest_version": 3,
  "name": "Markdown Formatter",
  "version": "1.0",
  "description": "Format markdown documents with AI assistance",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "favicon.ico",
      "48": "favicon.ico",
      "128": "favicon.ico"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/main.tsx"]
    }
  ],
  "host_permissions": [
    "https://api.groq.com/*",
    "https://kfbsptlqcbfvdxqkqemk.supabase.co/*"
  ]
}